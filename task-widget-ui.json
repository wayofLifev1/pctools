        {
          "type": "TextBlock",
          "text": "${task2}",
          "wrap": true,
          "spacing": "Small",
          "separator": true
        },
        {
          "type": "TextBlock",
          "text": "${task3}",
          "wrap": true,
          "spacing": "Small",
          "separator": true
        }
      ]
    }
